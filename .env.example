# LLM Firewall Configuration

# Server Configuration
LLM_FIREWALL_PORT=3000
NODE_ENV=production

# PII Detection Settings
LLM_FIREWALL_DETECT_SSN=true
LLM_FIREWALL_DETECT_EMAILS=true
LLM_FIREWALL_DETECT_CREDIT_CARDS=true
LLM_FIREWALL_DETECT_PHONE_NUMBERS=true
LLM_FIREWALL_DETECT_IP_ADDRESSES=true
LLM_FIREWALL_DETECT_API_KEYS=true

# Logging Configuration
LLM_FIREWALL_LOG_LEVEL=info
LLM_FIREWALL_LOG_PII=false
LLM_FIREWALL_LOG_REQUESTS=true

# Provider Settings
LLM_FIREWALL_OPENAI_ENABLED=true
LLM_FIREWALL_ANTHROPIC_ENABLED=true